<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="3dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/item_relative"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="4dp"
        android:background="@drawable/background_border"

        >

        <TextView
            android:id="@+id/tsymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="5dp"
            android:text="Symbol"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tcompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tsymbol"
            android:text="Company"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tshares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tsymbol"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:text="Number of shares"
            android:textColor="@color/bgrowcolor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tsprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tbprice"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:text="Sold Price"
            android:textColor="@color/bgrowcolor"
            android:textSize="18sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tbprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tshares"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:text="Bought Price"
            android:textColor="@color/bgrowcolor"
            android:textSize="18sp"
            />


        <TextView
            android:id="@+id/netg"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/ic_rectangle_1481"
            android:text="net"
            android:textAlignment="center"
            android:paddingTop="3dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/netl"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/ic_rectangle_1482"
            android:text="net"
            android:textAlignment="center"
            android:paddingTop="3dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/ttransactiontype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tsymbol"

            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:layout_toLeftOf="@id/tdate"
            android:text="Type on"
            android:textColor="@color/bgrowcolor"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tsymbol"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:text="Date"
            android:textColor="@color/bgrowcolor"
            android:textSize="18sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>