<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".notes"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/homie_1"
    android:gravity="center_horizontal"
    android:background="#E4E4E4">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="74dp"
        android:background="#B74C3E"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/home_page"
            android:layout_width="258dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingLeft="150dp"
            android:text="HOME"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="170dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/watchlist_intent"
            android:layout_width="130dp"
            android:layout_height="155dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/greyBlue">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/circlebackgroundp" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_binoculars" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:textSize="25sp"
                    android:text="Watchlist"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/notes_intent"
            android:layout_width="130dp"
            android:layout_height="155dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/greyBlue">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/circlebackgroundp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_note" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:textSize="25sp"
                    android:text="Notes"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_marginTop="320dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/history_intent"
            android:layout_width="130dp"
            android:layout_height="155dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/greyBlue">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/circlebackgroundp" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_history" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:textSize="20sp"
                    android:text="Trade History"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/capital_intent"
            android:layout_width="130dp"
            android:layout_height="155dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/greyBlue">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/circlebackgroundp" />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_bars" />

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:textSize="20sp"
                    android:paddingLeft="4dp"
                    android:text="Capital Gain/Loss"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:clipToPadding="false"
        android:layout_marginTop="470dp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/transaction_intent"
            android:layout_width="130dp"
            android:layout_height="155dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/greyBlue">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/circlebackgroundp" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_transaction" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:textSize="23sp"
                    android:text="Transaction"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/performance_intent"
            android:layout_width="130dp"
            android:layout_height="155dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/greyBlue">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/circlebackgroundp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_performance" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:textSize="20sp"
                    android:text="Performance"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/meh2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="672dp"
        android:background="#B74C3E"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:paddingLeft="40dp">
        <Button
            android:id="@+id/home_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/person_home_bar"
            android:gravity="center"
             />
    </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:paddingRight="40dp"
            android:layout_marginHorizontal="250dp">
        <Button
            android:id="@+id/search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"

            android:background="@drawable/search" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
</ScrollView>