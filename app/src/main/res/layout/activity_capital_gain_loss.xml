<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".notes"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".performance"
    android:background="#E4E4E4"
    android:scrollbars="vertical">

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="5dp"-->
    <!--android:text="@string/or"-->
    <!--android:paddingLeft="110dp"-->

    <!--android:layout_gravity="center"-->
    <!--android:textStyle="bold"/>-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#B74C3E"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="83dp"
            android:layout_height="91dp"

            android:src="@drawable/bars"
            app:civ_border_color="#254651"
            app:civ_border_width="5dp" />


        <TextView
            android:id="@+id/tran_title"
            android:layout_width="274dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="CAPITAL GAIN/LOSS"


            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="166dp">

        <ImageView
            android:id="@+id/gain_loss_chart"
            android:layout_width="197dp"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Gain_dollars"
                android:layout_width="211dp"
                android:layout_height="83dp"
                android:layout_weight="1"

                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="vertical"

                android:textColor="#254651"
                android:textSize="16dp"
                tools:ignore="InvalidId" />

            <TextView
                android:id="@+id/Gain_percent"
                android:layout_width="212dp"
                android:layout_height="83dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="vertical"

                android:textColor="#254651"
                android:textSize="16dp"

                tools:ignore="InvalidId"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stock_symbol"
            android:layout_width="87dp"
            android:layout_height="40dp"
            android:baselineAligned="false"

            android:gravity="center"
            android:orientation="vertical"
            android:text="Ticker"
            android:textColor="#254651"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:weightSum="100">

            <TextView
                android:id="@+id/h_stock_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="66.6"

                android:gravity="center"
                android:text="Stock Name"
                android:textAlignment="center"
                android:textColor="#254651"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="15.65"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profit_percent"
                    android:layout_width="75dp"
                    android:layout_height="40dp"

                    android:gravity="center"
                    android:text="%"
                    android:textColor="#254651"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="15.65"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profit_dollars"
                        android:layout_width="96dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="$"

                        android:textColor="#254651"
                        android:textSize="14dp"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>

    <ListView
        android:id="@+id/listView_1"
        android:layout_width="367dp"
        android:layout_height="397dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:scrollbars="vertical">

    </ListView>

    <LinearLayout
        android:id="@+id/meh2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="0dp"
        android:background="#B74C3E"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:paddingLeft="40dp">
            <Button
                android:id="@+id/home_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/home_button"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:paddingRight="40dp"
            android:layout_marginHorizontal="250dp">
            <Button
                android:id="@+id/search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"

                android:background="@drawable/search" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

</ScrollView>