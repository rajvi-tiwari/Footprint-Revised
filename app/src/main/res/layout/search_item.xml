<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/item_relative"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        android:background="@drawable/rouned_performance">

        <TextView
            android:id="@+id/text_ticker_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:text="SYMBOL"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:id="@+id/text_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_below="@id/text_ticker_symbol"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/button_add_search"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text="+"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>